<section class="container container-fluid mt-5">
  <section class="text-center blogpost-container">
    <h2 id="blog_title">{{blog_title}}</h2>
    <div class="blogpost-content">
      <li> <p>{{blog_post}}</p> </li>
    </div>
    <p>Written by {{user.name}}</p>
    <input
      type="button"
      value="+ New Comment"
      class="btnNew btn-info btn-new-comment"
      id="newcommentBtn"
    />
  </section>
</section>

<h2> hello</h2>

{{! comments  }}

<div class="comment-list">
  <h3>Comments: </h3>
  {{#each comments as |comment|}}
    <div class="comment-card">
      <p>{{comment.content}}</p>
      <p><b>{{comment.user.username}}</b> {{format_date comment.date}}</p>

    </div>
  {{/each}}
  {{#if logged_in}}

    {{! <button class="btn btn-info" id="addComments"> + Add Comment</button> }}

  {{/if}}
  <div class="comment-container hidden">
    <form class="form new-comment-form">
      <div class="form-group">
        <label for="post-comment">Comment:</label>
        <input
          class="form-input"
          type="text"
          id="post-comment"
          name="post-comment"
        />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>
        <button
          type="button"
          id="cancel-form"
          class="btn btn-secondary"
        >Cancel</button>
      </div>
    </form>
  </div>
</div>